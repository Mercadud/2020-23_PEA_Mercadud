@model HVK.Models.Login

@{
    ViewData["Title"] = "Login";
}

<main class="container w-50 mx-auto mt-3">
    <h2>Sign In</h2>
    <form asp-action="Index" asp-controller="Home" method="post">
        <div asp-validation-for="Password" class="validation-summary-errors"></div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Password">
        </div>
        <button class="btn w-100 btn-secondary mb-3" type="submit">Sign In</button>

        <div>
            <p class="float-start pl-5 text-black-50">Forgot Password?</p>
            <p class="float-end pr-5 text-primary"><a asp-action="SignUp">Sign Up</a></p>
        </div>
    </form>
</main>
