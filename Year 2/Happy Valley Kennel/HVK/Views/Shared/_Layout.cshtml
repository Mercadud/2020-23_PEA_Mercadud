@model HVK.Models.Customer

<html lang="en">

<head>
    <title> @ViewData["Title"] </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
<header class="container sticky-top bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                Happy Valley Kennel
                <img src="~/images/Logo_v2.png" alt="Salma Logo"
                     height="40"/>
            </a>
            <div class="my-2 my-lg-0">
                @if (Model != null) {
                    <div class="container">
                        <div class="row">
                            <div class="col d-flex align-items-center">
                                <a class="text-nowrap text-decoration-none" href="/Customers/Details/@Model.CustomerId">
                                    @Model.FirstName
                                    @Model.LastName
                                </a>
                            </div>
                            <div class="col">
                                <img src="~/images/person-circle.svg" alt="" height="40" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </nav>
</header>
<main>
    @RenderBody()
</main>
<footer>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>